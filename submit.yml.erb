---
batch_connect:
  template: vnc
script:
  queue_name: "<%= pom_partitions %>"
  native:
    - "--nodes=1"
    - "--time"
    - "0-<%= pom_num_hours %>"
    - "--cpus-per-task=2"
    - "--mem=8G"
    <%- unless bc_email_on_started.to_i == 0 -%>
    - "--mail-type=BEGIN"
    - "--mail-user=<%= ENV['USER'] %>@pomona.edu,<%= ENV['USER'] %>@mymail.pomona.edu"
    <%- end -%>